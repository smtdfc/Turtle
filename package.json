{
  "name": "turtle-source",
  "version": "3.0.0",
  "description": "The simple library for build UI",
  "keywords": [
    "turtle",
    "turtleUI",
    "smtdfc"
  ],
  "author": "smtdfc",
  "license": "MIT",
  "scripts": {
    "publish": "echo '//registry.npmjs.org/:_authToken=${NPM_TOKEN}' > ~/.npmrc && lerna publish",
